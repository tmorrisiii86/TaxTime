@model TaxTime4.Models.Customer

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ssn1" class="control-label">SSN</label>
                <div class="input-group">
                    <input asp-for="Ssn1" oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);" maxlength="3" placeholder="XXX" type="number" style="width:60px" class="form-control" />
                    <span asp-validation-for="Ssn1" class="text-danger"></span>
                    <input asp-for="Ssn2" oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);" maxlength="2" placeholder="XX" type="number" style="width:50px" class="form-control" />
                    <span asp-validation-for="Ssn2" class="text-danger"></span>
                    <input asp-for="Ssn3" oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);" maxlength="4" placeholder="XXXX" type="number" style="width:70px" class="form-control" />
                    <span asp-validation-for="Ssn3" class="text-danger"></span>
                </div>
                <div class="form-group" hidden>
                    <label asp-for="LastUpdated" class="control-label"></label>
                    <input asp-for="LastUpdated" class="form-control" />
                    <span asp-validation-for="LastUpdated"  class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default"/>
                </div>
</form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
